<?xml version="1.0"?>
<!DOCTYPE compass-core-mapping PUBLIC
    "-//Compass/Compass Core Mapping DTD 1.0//EN"
    "http://www.opensymphony.com/compass/dtd/compass-core-mapping.dtd">

<compass-core-mapping package="com.opensymphony.able.model">

    <contract alias="entity">
        <id name="id" />
    </contract>

    <contract alias="named-entity" extends="entity">
        <property name="name">
            <meta-data>${user.name}</meta-data>
        </property>
    </contract>

    <class name="User" alias="${user.user}" extends="named-entity">

        <property name="name">
            <meta-data>${user.name}</meta-data>
        </property>

        <property name="email">
            <meta-data>${user.email}</meta-data>
        </property>

        <property name="username">
            <meta-data>${user.username}</meta-data>
        </property>

    </class>

    <class name="Component" alias="${user.component}" extends="named-entity">

        <property name="name">
            <meta-data>${user.name}</meta-data>
        </property>

    </class>

    <class name="Person" alias="${user.person}" extends="entity">

        <property name="firstName">
            <meta-data>${user.firstName}</meta-data>
        </property>

        <property name="lastName">
            <meta-data>${user.lastName}</meta-data>
        </property>

    </class>


</compass-core-mapping>
