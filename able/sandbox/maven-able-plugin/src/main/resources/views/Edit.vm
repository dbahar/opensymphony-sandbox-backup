<%@ include file="/WEB-INF/header.jsp"%>
<%@ taglib prefix="${entityInfo.entityUri}" tagdir="/WEB-INF/tags/entity/${entityInfo.entityUri}"%>
<html>
<body>

<stripes:form action="${entityInfo.actionUri}">
  <stripes:hidden name="id" />

  <stripes:errors />

  <table class="display">

#foreach( $property in $entityInfo.editFormProperties )
    <tr>
      <th><stripes:label for="entity.${property.name}">${property.displayName}</stripes:label>:</th>
 #if( $property.writeable )
      <td><${entityInfo.entityUri}:${property.name}EditField name="entity.${property.name}"/></td>
 #else
      <td><${entityInfo.entityUri}:${property.name}ViewField name="entity.${property.name}"/></td>
 #end
    </tr>
#end

  </table>

  <div class="buttons"><stripes:submit name="save" value="Save" /> <stripes:submit name="cancel" value="Cancel" /></div>
</stripes:form>

</body>
</html>
