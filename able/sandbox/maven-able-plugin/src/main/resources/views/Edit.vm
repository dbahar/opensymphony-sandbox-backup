<%@ include file="/WEB-INF/header.jsp"%>
<%@ taglib prefix="${entityInfo.entityUri}" tagdir="/WEB-INF/tags/entity/${entityInfo.entityUri}"%>
<html>
<body>

<stripes:form action="${entityInfo.actionUri}">
  <stripes:hidden name="id" />

  <stripes:errors />

  <table class="display">

#foreach( $property in $entityInfo.editFormProperties )
#set( $name = "entity.${property.name}")
#if( $property.persistent ) 
 #set( $name = "${name}.id" )
#end
    <tr>
      <th><stripes:label for="$name">${property.displayName}</stripes:label>:</th>
 #if( $property.writable )
      <td><${entityInfo.entityUri}:${property.name}EditField name="$name"/></td>
 #else
      <td><${entityInfo.entityUri}:${property.name}ViewField entity="${actionBean.entity}"/></td>
 #end
    </tr>
#end

  </table>

  <div class="buttons"><stripes:submit name="save" value="Save" /> <stripes:submit name="cancel" value="Cancel" /></div>
</stripes:form>

</body>
</html>
